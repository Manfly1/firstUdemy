<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  <p>    <%= form.text_field :image, placeholder: "Image", class: "form-control" %></p>
  </div>

  <div class="form-group">
    <p>  <%= form.text_field :video, placeholder: "Video", class: "form-control" %></p>
  </div>

  <div class="form-group">
    <p>  <%= form.text_field :title, placeholder: "Name", class: "form-control" %></p>
  </div>

  <div class="form-group">
    <p>  <%= form.number_field :star, placeholder: "Rating", class: "form-control" %></p>
  </div>

  <div class="field">
  <p>  <%= form.text_area :description, placeholder: "Description",length: "800", class: "form-control" %> </p>
  </div>
  <div class="form-check">
  <%= form.check_box :public, id: :public, class: "form-check-input"%>
  <label for="public" class="form-check-label">Publish?</label>
  </div>
<br>
  <button type="submit" class="btn btn-primary">Save</button>
  <%= link_to "Show all", courses_path, class: "btn btn-secondary" %>


<% end %>
